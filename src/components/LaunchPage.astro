---
import {
  Users,
  Server,
  Map,
  Clock,
  Activity,
  Skull,
  MessageSquare,
} from "lucide-astro";
import ServerStatus from "./ServerStatus.astro";
---

<header class="mb-8 text-center">
  <h1 class="text-5xl font-bold mb-5">Undead Union</h1>
  <p class="text-xl max-w-2xl text-center mx-auto text-zinc-300">
    Welcome to the official website for the Undead Union Project Zomboid server.
    Survive, build, and join our thriving community in the zombie apocalypse.
  </p>
</header>

<section class="mb-8">
  <ServerStatus />
</section>

<section class="mb-12">
  <h2 class="text-3xl font-bold mb-7 text-center">Server Features</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="flex">
      <div class="mr-4">
        <Activity class="w-8 h-8 text-purple-500" />
      </div>
      <div>
        <h3 class="text-xl font-semibold mb-2">Lightly Modded</h3>
        <p class="text-zinc-300">
          Enhanced gameplay with carefully selected mods that maintain the core Project Zomboid experience while adding quality of life improvements.
        </p>
      </div>
    </div>

    <div class="flex">
      <div class="mr-4">
        <MessageSquare class="w-8 h-8 text-green-500" />
      </div>
      <div>
        <h3 class="text-xl font-semibold mb-2">Active Community</h3>
        <p class="text-zinc-300">
          Join our Discord for server announcements, make new friends, and
          participate in regular events and gameplay.
        </p>
      </div>
    </div>

    <div class="flex">
      <div class="mr-4">
        <Users class="w-8 h-8 text-blue-500" />
      </div>
      <div>
        <h3 class="text-xl font-semibold mb-2">Collaborative SMP</h3>
        <p class="text-zinc-300">
          Work together with other survivors to build communities, share resources, and create lasting friendships in the apocalypse.
        </p>
      </div>
    </div>

    <div class="flex">
      <div class="mr-4">
        <Skull class="w-8 h-8 text-red-500" />
      </div>
      <div>
        <h3 class="text-xl font-semibold mb-2">Realistic Zombies</h3>
        <p class="text-zinc-300">
          Face challenging and authentic zombie behavior that creates intense survival scenarios and genuine fear.
        </p>
      </div>
    </div>
  </div>
</section>

<section
  class="text-center bg-zinc-800 rounded-lg p-8 shadow-lg border border-zinc-700"
>
  <h2 class="text-3xl font-bold mb-4">Ready to Survive?</h2>
  <p class="text-zinc-300 max-w-2xl mx-auto mb-6">
    Join Undead Union today and test your survival skills.
  </p>
  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <a
      href="steam://connect/51.222.82.124:28135"
      class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-colors"
    >
      Connect to Server
    </a>
    <a
      href="https://discord.gg/AqRRetQgnu"
      class="bg-zinc-700 hover:bg-zinc-600 text-white font-bold py-3 px-6 rounded-lg transition-colors"
    >
      Join Discord
    </a>
  </div>
</section>
