---
import { SEO } from 'astro-seo';
import '../styles/global.css';

interface Props {
	title: string;
	description: string;
	image?: string;
}

const { title, description, image = '/favicon.png' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title: title,
					type: 'website',
					image: image,
				},
				image: {
					alt: title,
				},
			}}
			twitter={{
				card: 'summary_large_image',
				title: title,
				description: description,
				image: image,
				imageAlt: title,
			}}
		/>
	</head>
	<body class="min-h-screen bg-zinc-900 text-zinc-50">
		<slot />
	</body>
</html>
